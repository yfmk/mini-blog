<div class="contents row">
  <div class="col-lg-12">
    <%= form_for @tweet do |f| %>
      <h2>ブログかく</h2>
      <div class="form-group">
        <div class="col-lg-6">
          <%= f.text_field :name, placeholder: "Nickname", class: "form-control" %>
          <%= f.text_field :text, placeholder: "blog", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit "送信", class: "btn btn-primary withripple" %>
      </div>
    <% end %>
  </div>
</div>